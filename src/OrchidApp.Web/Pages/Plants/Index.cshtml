@page
@model OrchidApp.Web.Pages.Plants.IndexModel

@{
    ViewData["Title"] = "Plants";
}

<h1>Plants</h1>

<div class="d-grid gap-2 mb-4">
    <a asp-page="/Plants/Add/Index"
       class="btn btn-primary btn-lg">
        Add plant
    </a>
</div>

<div class="d-grid gap-2">
@foreach (var taxon in Model.Taxa)
{
    <a asp-page="/Plants/Taxon"
       asp-route-taxonId="@taxon.TaxonId"
       class="btn btn-outline-primary btn-lg text-start d-flex justify-content-between align-items-center">

        <span>@taxon.DisplayName</span>
        <span class="badge bg-secondary">
            @taxon.PlantCount
        </span>

    </a>
}
</div>

<div class="mt-4">
    <a asp-page="/Index"
       class="btn btn-outline-secondary btn-lg w-100">
        ‚Üê Back to home
    </a>
</div>