@page "/Plants/Taxon/{taxonId:int}"
@model OrchidApp.Web.Pages.Plants.TaxonModel

@{
    ViewData["Title"] = Model.DisplayName;
}

<h1>@Model.DisplayName</h1>

<table class="table">
    <thead>
        <tr>
            <th>Tag</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
@foreach (var plant in Model.Plants)
{
        <tr>
            <td>
                <a asp-page="/Plants/Details"
                asp-route-plantId="@plant.PlantId">
                    @plant.PlantTag
                </a>
            </td>
            <td>@plant.PlantName</td>
        </tr>
}
    </tbody>
</table>

<a asp-page="/Plants/Index">Back to Plants</a>
