@page "/Plants/Events/Remove/{plantId:int}/{sourceId:int}"
@model OrchidApp.Web.Pages.Plants.Events.RemoveModel

@{
    ViewData["Title"] = "Remove Observation";
}

<h1>Remove Observation</h1>

<p class="text-muted">
    You are about to remove the following observation.
</p>

<div class="border rounded p-3 mb-3">
    <strong>@Model.Event!.EventType</strong><br />
    <span class="text-muted">
        @Model.Event.EventDateTime.ToString("yyyy-MM-dd")
    </span>
    <p class="mt-2">
        @Model.Event.EventSummary
    </p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">
        Confirm Remove
    </button>

    <a asp-page="/Plants/Details"
       asp-route-plantId="@Model.PlantId"
       class="btn btn-secondary">
        Cancel
    </a>
</form>
