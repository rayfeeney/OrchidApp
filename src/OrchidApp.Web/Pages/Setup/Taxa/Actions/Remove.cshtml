@page "{id:int}"
@model OrchidApp.Web.Pages.Setup.Taxa.Actions.RemoveModel

<h1>Remove Species/Hybrid</h1>

@if (Model.Taxon != null)
{
    <div class="mt-3">
        <p><strong>@Model.Taxon.DisplayName</strong></p>

        <p>
            Are you sure you want to remove this species/hybrid?
            This action should only be taken if the species/hybrid was added in error, or has been deemed biologically invalid.
        </p>

        <form method="post" class="mt-3">

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    Confirm Remove
                </button>

                <a asp-page="/Setup/Taxa/Details"
                   asp-route-id="@Model.Taxon.TaxonId"
                   class="btn btn-secondary">
                    Cancel
                </a>
            </div>

        </form>
    </div>
}
