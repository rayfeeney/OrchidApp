@page
@model OrchidApp.Web.Pages.Setup.Taxa.IndexModel

<h1>Species & hybrids</h1>

<div class="d-grid gap-2 mb-4">
    <a asp-page="/Setup/Taxa/Actions/Add"
       class="btn btn-lg btn-primary">
        Add species/hybrid
    </a>
</div>

@if (!Model.Taxa.Any())
{
    <p>No species or hybrids have been added yet.</p>
}
else
{
    @foreach (var genusGroup in Model.Taxa.GroupBy(t => t.GenusName))
    {
        <h2 class="mt-4">@genusGroup.Key</h2>

        <div class="d-grid gap-2">
        @foreach (var taxon in genusGroup)
        {
            <a asp-page="/Setup/Taxa/Details"
            asp-route-id="@taxon.TaxonId"
            class="btn btn-lg text-start @(taxon.IsActive ? "btn-outline-primary" : "btn-outline-secondary text-muted")">

                @taxon.DisplayName

                @if (!taxon.IsActive)
                {
                    <span class="badge bg-secondary ms-2">
                        Inactive
                    </span>
                }
            </a>
        }
        </div>
    }
}

<div class="mt-4">
    <a asp-page="/Setup/Index"
       class="btn btn-outline-secondary btn-lg w-100">
        ‚Üê Back to setup
    </a>
</div>